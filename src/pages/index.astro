---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";
import Skills from "../components/Skills.astro";
import Highlights from "../components/Highlights.astro";
---

<BaseLayout>
	<div class="stack gap-10 lg:gap-30">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<div class="hero-text">
					<h1 class="title">Hi, I'm Ivan Gonzalez</h1>
					<p class="tagline">
						Lead Engineer with 10+ years in backend, DevOps, and
						platform engineering
					</p>

					<div class="roles">
						<span class="pill"
							><Icon icon="code" size="1.33em" />Backend</span
						>
						<span class="pill"
							><Icon icon="server" size="1.33em" />DevOps</span
						>
						<span class="pill"
							><Icon icon="rocket-launch" size="1.33em" />Platform
							Engineering</span
						>
					</div>
				</div>

				<img
					alt="Ivan Gonzalez Cabral professional portrait"
					width="336"
					height="434"
					src="/assets/portrait.jpeg"
				/>
			</header>
		</div>

		<main class="wrapper stack">
			<Skills />
			<Highlights />
		</main>
	</div>
</BaseLayout>
